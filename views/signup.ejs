<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Face - App</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
	<link rel="stylesheet" href="style/sign_up.css">
	<style>
		body 		{ padding-top:80px; }
		h1{ font-family: 'Lobster', cursive}
		label{font-family: 'Lobster', cursive; font-size: 1.35em}
		body p{ font-family: "Yu Gothic UI Semibold"; font-size: 1em; }
		input{font-family: "Yu Gothic UI"; font-size: 1em;		}
		button{font-family: "Yu Gothic UI";font-size: 1.15em; border-style: solid; border-color:black; padding: .65em; }

	</style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-check-square-o"></span> Sign up</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn btn-primary btn-lg"><strong>Sign up</button>
	</form>

	<hr>

	<p><strong>Already have an account? <a href="/login">Log in</a></p>
	<p>Or click here to go <a href="/">Home</a>.</p>

</div>

</div>
</body>
</html>
